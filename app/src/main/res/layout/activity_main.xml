<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.acer.dutour.MainActivity">





    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/padder"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="178dp"
                android:layout_marginTop="41dp"
                android:adjustViewBounds="true"
                android:background="@android:color/background_light"
                android:contentDescription="@string/doon_university"
                android:cropToPadding="true"
                app:srcCompat="@drawable/doon" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/doon_university"
                android:textColor="@android:color/background_dark"
                android:textSize="24sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/description_txt"
                android:textSize="14sp"
                android:textStyle="italic"
                android:visibility="visible" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="For more info visit our website:"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="http://doonuniversity.org/"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="130dp"
                android:text="Get Direction From"
                android:textColor="@android:color/background_dark"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/isbt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="From ISBT" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From Railway Station"
                android:layout_marginLeft="6dp"
                android:id="@+id/rs"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/ct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="From Clock Tower" />
            </LinearLayout>
            </LinearLayout>
    </ScrollView>
    <FrameLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/f1content">

    </FrameLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nv"
        app:headerLayout="@layout/header"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:itemBackground="@android:color/transparent"
        app:menu="@menu/main"
        android:fitsSystemWindows="true"
        tools:ignore="ExtraText">

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>
